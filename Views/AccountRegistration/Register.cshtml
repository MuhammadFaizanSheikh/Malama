@model ExcelFilesCompiler.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Your Application Name</title>

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for theme color -->
    <style>
        body {
            background-color: rgba(80, 90, 201, 0.1); /* Light theme background */
            height: 100vh;
            /* display: flex; */
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        h2 {
            color: rgba(80, 90, 201, 1);
            text-align: center;
            margin-bottom: 20px;
        }

        .form-container {
            width: 100%;
            max-width: 600px; /* Set max width for form */
            margin: 0 auto; /* Center the form */
            padding: 0 15px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%; /* Full width controls */
            padding: 10px; /* Add padding for a larger appearance */
        }

        .btn-theme {
            background-color: rgba(80, 90, 201, 1);
            border-color: rgba(80, 90, 201, 1);
            color: white;
            width: 100%; /* Full width button */
            padding: 10px; /* Add padding to button */
        }

            .btn-theme:hover {
                background-color: rgba(80, 90, 201, 0.8);
                border-color: rgba(80, 90, 201, 0.8);
            }

        .form-control, select.form-control {
            min-height: 40px; /* Adjust as needed */
            padding: 10px 12px; /* Increase padding for better readability */
            box-sizing: border-box;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Register</h2>

          @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

        <form method="post" asp-action="Register">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="font-weight-bold">Role</label>
                <select asp-for="Role" class="form-control">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-theme">Register</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>

    <!-- Bootstrap JS and dependencies (CDN) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
